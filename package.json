{
  "name": "card-games-monorepo",
  "private": true,
  "description": "Monorepo for Solitaire Games",
  "workspaces": [
    "freecell-mvp",
    "klondike-mvp",
    "shared"
  ],
  "scripts": {
    "install-all": "npm install",
    "build:shared": "npm run build -w shared",
    "build:games": "npm run build -ws --if-present",
    "build": "npm run build:shared && npm run build:games",
    "test": "npm test -ws --if-present",
    "test:watch": "npm run test:watch -ws --if-present",
    "test:coverage": "npm run test:coverage -ws --if-present",
    "lint": "npm run lint -ws --if-present",
    "typecheck": "tsc --noEmit -p klondike-mvp/tsconfig.json && tsc --noEmit -p freecell-mvp/tsconfig.json",
    "validate": "npm run typecheck && npm run lint && npm test && npm run build",
    "setup-hooks": "ln -sf ../../scripts/pre-commit.sh .git/hooks/pre-commit && chmod +x .git/hooks/pre-commit && echo 'âœ… Git hooks installed!'",
    "dev:freecell": "npm run dev -w freecell-mvp",
    "dev:klondike": "npm run dev -w klondike-mvp",
    "docs": "cat DOCS.md",
    "docs:ai": "cat AI_GUIDE.md",
    "docs:rfcs": "cat rfcs/INDEX.md",
    "docs:deployment": "cat docs/deployment/README.md",
    "docs:accessibility": "cat docs/accessibility/README.md",
    "docs:games": "cat docs/games/README.md",
    "rfc:list": "cd rfcs && ./scripts/list-rfcs.sh",
    "rfc:new": "cd rfcs && ./scripts/new-rfc.sh",
    "rfc:status": "cd rfcs && ./scripts/update-status.sh"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "vite": "^5.4.11",
    "typescript": "^5.0.0",
    "@vitejs/plugin-react": "^4.0.0",
    "vite-plugin-pwa": "^0.19.0"
  },
  "overrides": {
    "vite": "^5.4.11",
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  }
}
